<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">My Documents</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">

                </div><!-- /.col -->
            </div><!-- /.row -->

            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="input-group input-group-sm" style="width: 50%;margin:auto">
                                <input type="text" class="form-control filter" data-filter-target="docs" placeholder="Filter">
                            </div>
                            <hr>
                            <div class="tile-container default-width center" id="docs">
                                {% for Document in Documents %}
                                    <div class="tile center-center filterable link pointer" data-type="DIV" data-url="{{ Document['Location'] }}">
                                        <p>{{ Document['Name'] }}</p>
                                        <small class="text-muted">Received: {{ Document['ModifiedDay'] }}</small>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                        <!-- ./card-body -->
                        <div class="card-footer">

                        </div>
                        <!-- /.card-footer -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>


        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
</div>