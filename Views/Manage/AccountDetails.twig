<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid col-sm-6">
            <h1 class="m-0 text-center">Account Details</h1>
            <hr>
            <div class="card collapsed-card">
                <div class="card-header">
                    <h5 class="card-title">Login & Security</h5>

                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse">
                            <i class="fas fa-plus"></i>
                        </button>
                    </div>
                </div>
                <!-- /.card-header -->
                <div class="card-body col-sm-6">
                    <form class="aJaxForm" action="UpdateAccountLoginInfo" method="post" id="es87">
                        <input type="hidden" name="VerificationCode" id="VerificationCode">
                        <input type="hidden" name="UpdateAccountLoginInfo" value="true">
                        <div class="form-group">
                            <label for="Name">Name</label>
                            <input type="text" class="form-control" id="Name" aria-describedby="Name" name="AccountName" value="{{ Name }}" placeholder="Full Name" required="required">
                        </div>
                        <div class="form-group">
                            <label for="Email">Email address</label>
                            <input type="email" class="form-control verify" id="Email" name="AccountEmail" value="{{ Email }}" aria-describedby="Email" placeholder="Email" required="required">
                        </div>
                        <div class="form-group">
                            <label for="Phone">Mobile Phone Number</label>
                            <input type="tel" class="form-control verify" id="Phone" aria-describedby="Phone"name="AccountPhone" value="{{ Phone }}" placeholder="Phone">
                        </div>
                        <div class="form-group">
                            <label for="2FAMethod">2-Factor Method</label>
                            <select class="form-control" id="2FAMethod" name="2FAMethod">
                                <option value="Email">Email</option>
                                <option value="Phone" {%  if Settings['2FAMethod'] == 'Phone' %} selected="selected" {% endif %}>Phone</option>
                            </select>
                        </div>
                        <hr>
                        <div class="form-group">
                            <label for="Password">New Password</label>
                            <input type="password" class="form-control" id="Password" name="AccountPassword" placeholder="New Password">
                        </div>
                        <div class="form-group">
                            <label for="ConfirmPassword">Confirm New Password</label>
                            <input type="password" class="form-control" id="ConfirmPassword" name="AccountConfirmPassword" placeholder="Confirm New Password">
                        </div>
                        <hr>
                        <button class="btn btn-primary" type="submit">Update</button>
                    </form>
                </div>
                <!-- ./card-body -->
            </div>



            <div class="card collapsed-card">
                <div class="card-header">
                    <h5 class="card-title">Notification Settings</h5>

                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse">
                            <i class="fas fa-plus"></i>
                        </button>
                    </div>
                </div>
                <!-- /.card-header -->
                <div class="card-body col-sm-6">
                    <form class="aJaxForm" method="post">

                        <div class="form-group">
                            <label for="ex1">Alert me when my email has been changed</label>
                            <select class="form-control" id="ex1" name="">
                                <option value="1">Yes</option>
                                <option value="0">No</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="ex2">Alert me when my password has been changed</label>
                            <select class="form-control" id="ex2" name="">
                                <option value="1">Yes</option>
                                <option value="0">No</option>
                            </select>
                        </div>
                        <hr>
                        <button class="btn btn-primary" type="submit">Update</button>
                    </form>
                </div>
                <!-- ./card-body -->
            </div>

            <div class="card collapsed-card">
                <div class="card-header">
                    <h5 class="card-title">Email Preferences</h5>

                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse">
                            <i class="fas fa-plus"></i>
                        </button>
                    </div>
                </div>
                <!-- /.card-header -->
                <div class="card-body col-sm-6">
                    <form class="aJaxForm" method="post">
                        <div class="form-group">
                            <label for="ex">Subscribe to our newsletter for the latest events</label>
                            <select class="form-control" id="ex" name="">
                                <option value="1">Yes</option>
                                <option value="0">No</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="ex1">Receive delivery updates</label>
                            <select class="form-control" id="ex1" name="">
                                <option value="1">Yes</option>
                                <option value="0">No</option>
                            </select>
                        </div>
                        <div class="form-group">
                                <label for="ex122">Receive Inventory updates</label>
                            <select class="form-control" id="ex122" name="">
                                <option value="1">Yes</option>
                                <option value="0">No</option>
                            </select>
                        </div>
                        <hr>
                        <button class="btn btn-primary" type="submit">Update</button>
                    </form>
                </div>
                <!-- ./card-body -->
            </div>



        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
</div>