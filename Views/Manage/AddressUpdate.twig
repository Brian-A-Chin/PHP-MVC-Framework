<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0"></h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/account">My Account</a></li>
                        <li class="breadcrumb-item"><a href="/account/manage//addressBook">Address</a></li>
                        {%  if ref is defined %}
                            <li class="breadcrumb-item active">Update</li>
                        {%  else %}
                            <li class="breadcrumb-item active">Add new</li>
                        {% endif %}

                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->

            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="col-md-5">
                                <form class="aJaxForm" action="{{ (ref is defined ? 'UpdateAddress' : 'AddAddress') }}" method="post">
                                    <h4>Address</h4>
                                    <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vestibulum ut nibh in elit volutpat rutrum.</p>
                                    <input type="hidden" name="Country" value="US">
                                    {%  if ref is defined %}
                                        <input type="hidden" name="UpdateAddress" value="{{ ref|raw }}">
                                    {%  else %}
                                        <input type="hidden" name="AddAddress" value="true">
                                    {% endif %}

                                    <div class="form-group first field--not-empty">
                                        <label for="name">Full name (First and Last name)</label>
                                        <input type="text" class="form-control required" id="name" name="FullName" value="{{ FullName }}" required="required">
                                    </div>

                                    <div class="form-group first field--not-empty">
                                        <label for="Company">Company Name</label>
                                        <input type="text" class="form-control required" id="Company" name="CompanyName" value="{{ CompanyName }}">
                                    </div>

                                    <div class="form-group">
                                        <label for="addressOne">Address line 1</label>
                                        <input type="text" class="form-control required" id="addressOne" name="AddressOne" value="{{ AddressOne }}" required="required">
                                    </div>

                                    <div class="form-group">
                                        <label for="addressTwo">Address line 2</label>
                                        <input type="text" class="form-control" id="addressTwo" name="AddressTwo" value="{{ AddressTwo }}">
                                    </div>

                                    <div class="form-group">
                                        <label for="city">City</label>
                                        <input type="text" class="form-control required" id="city" name="City" value="{{ City }}" required="required">
                                    </div>

                                    <div class="form-group">
                                        <label for="state">State / Province / Region</label>
                                        <input type="text" class="form-control required" id="state" name="State" value="{{ State }}" required="required">
                                    </div>

                                    <div class="form-group">
                                        <label for="zip">Zip Code</label>
                                        <input type="text" class="form-control required" id="zip" name="Zip" value="{{ Zipcode }}" required="required">
                                    </div>

                                    <div class="form-group last mb-3">
                                        <label for="phone">Phone number</label>
                                        <input type="tel" class="form-control required" id="phone"  value="{{ Phone }}" name="Phone">
                                    </div>
                                    <hr>
                                    {%  if ref is defined %}
                                        <button class="btn btn-success" type="submit">Save Changes</button>
                                    {%  else %}
                                        <button class="btn btn-success" type="submit">Add Address</button>
                                    {% endif %}

                                </form>
                            </div>
                        </div>
                        <!-- ./card-body -->
                        <div class="card-footer">
                        </div>
                        <!-- /.card-footer -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>



        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
</div>