<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0"></h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/account">Admin</a></li>
                        <li class="breadcrumb-item active">Create Invitation</li>

                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->

            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="col-md-5">
                                <form class="aJaxForm" action="UpdatePrivileges" method="post">
                                    <h4>Manage Privileges</h4>
                                    <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vestibulum ut nibh in elit volutpat rutrum.</p>
                                    <input type="hidden" name="UpdatePrivileges" value="{{ AccountID }}">
                                    <div class="form-group last mb-3">
                                        <label for="permissions">Permission Group</label>
                                        <br>
                                        <small class="text-muted">Choose the set of permission that will be granted upon successful registration.</small>
                                        <select class="form-control" id="permissions" name="PermissionGroupID" required="required">
                                            {% for key, value in PermissionGroups %}
                                                <option value="{{ value['ID'] }}" {{ (CurrentPermissionGroup ==  value['ID']) ? 'selected="selected"' : '' }}>{{ value['Name'] }}</option>
                                            {% endfor %}
                                        </select>
                                    </div>


                                    <hr>
                                    <button class="btn btn-success" type="submit">Update privileges</button>
                                </form>
                            </div>
                        </div>
                        <!-- ./card-body -->
                        <div class="card-footer">
                        </div>
                        <!-- /.card-footer -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>



        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
</div>