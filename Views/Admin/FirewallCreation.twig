<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Blacklist</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/account/admin//firewall">Firewall</a></li>
                        {% if  data is defined %}
                            <li class="breadcrumb-item active">Modify Blacklist</li>
                        {% else %}
                            <li class="breadcrumb-item active">Blacklist</li>
                        {% endif %}

                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->

            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="col-md-5">
                                <form class="aJaxForm" action="{{ (data is defined) ? 'UpdateBlacklist' : 'AddToBlacklist' }}" method="post">
                                    <p></p>
                                    <div class="form-group last mb-3">
                                        <label for="accessPoints">IP Address</label>
                                        <br>
                                        {% if  data is defined %}
                                            <input type="hidden" name="UpdateBlacklist" value="{{ Target }}">
                                            <input type="text" id="accessPoints" class="form-control" name="IP" rows="6" value="{{ data.IP }}" required="required"/>
                                        {% else %}
                                            <small class="text-muted">Separate Multiple IP address by a comma</small>
                                            <textarea id="accessPoints" class="form-control" name="Blacklist" rows="6" required="required"></textarea>
                                        {% endif %}

                                    </div>
                                    <div class="form-group last mb-3">
                                        <label for="reason">Reason</label>
                                        <br>
                                        <small class="text-muted">Add a sort summary describing the reason for blacklisting the specified address(es)</small>
                                        <input type="text" class="form-control" id="reason" value="{{ data.Reason }}" name="Reason" required="required">
                                    </div>
                                    <hr>
                                    <div class="form-group last mb-3">
                                        <label for="LoginAccess">Login Access</label>
                                        <br>
                                        <small class="text-muted">Setting this option to &quot;Prohibit&quot; prevents the ability to login.</small>
                                        <select class="form-control" id="LoginAccess" name="LoginAccess" required="required">
                                            {%  if data.Login %}
                                                <option value="0">Prohibit</option>
                                                <option value="1" selected="selected">Default</option>
                                            {% else %}
                                                <option value="0" selected="selected">Prohibit</option>
                                                <option value="1" >Default</option>
                                            {% endif %}
                                        </select>
                                    </div>
                                    <div class="form-group last mb-3">
                                        <label for="RegistrationAccess">Registration Access</label>
                                        <br>
                                        <small class="text-muted">Setting this option to &quot;Prohibit&quot; prevents the ability to create an account.</small>
                                        <select class="form-control" id="RegistrationAccess" name="RegistrationAccess" required="required">
                                            {%  if data.Registration %}
                                                <option value="0">Prohibit</option>
                                                <option value="1" selected="selected">Default</option>
                                            {% else %}
                                                <option value="0" selected="selected">Prohibit</option>
                                                <option value="1" >Default</option>
                                            {% endif %}
                                        </select>
                                    </div>
                                    <div class="form-group last mb-3">
                                        <label for="PaymentAbility">Payment Ability</label>
                                        <br>
                                        <small class="text-muted">Setting this option to &quot;Prohibit&quot; prevents the ability to send payments of any kind.</small>
                                        <select class="form-control" id="PaymentAbility" name="PaymentAbility" required="required">
                                            {%  if data.Payment %}
                                                <option value="0">Prohibit</option>
                                                <option value="1" selected="selected">Default</option>
                                            {% else %}
                                                <option value="0" selected="selected">Prohibit</option>
                                                <option value="1" >Default</option>
                                            {% endif %}
                                        </select>
                                    </div>
                                    <div class="form-group last mb-3">
                                        <label for="SupportAbility">Support Request</label>
                                        <br>
                                        <small class="text-muted">Setting this option to &quot;Prohibit&quot; prevents the ability to send messages to support</small>
                                        <select class="form-control" id="SupportAbility" name="SupportAbility" required="required">
                                            {%  if data.Support %}
                                                <option value="0">Prohibit</option>
                                                <option value="1" selected="selected">Default</option>
                                            {% else %}
                                                <option value="0" selected="selected">Prohibit</option>
                                                <option value="1" >Default</option>
                                            {% endif %}
                                        </select>
                                    </div>
                                    <div class="form-group last mb-3">
                                        <label for="Expires">Expiration Date</label>
                                        <br>
                                        <small class="text-muted">Specifies the effective duration. When the below date is meet or exceeded, this rule will no longer be in effect.</small>
                                        <input type="date" name="Expires" class="form-control" id="Expires" value="{{ data.Expires }}" required="required">
                                    </div>
                                    <hr>
                                    {% if  data is defined %}
                                        <button class="btn btn-primary" type="submit">Update Blacklist</button>
                                        <button class="btn btn-danger confirm" type="button" data-confirm="postRequest" data-url="RemoveBlacklistRule" data-keys="RemoveBlacklistRule" data-values="{{ Target }}">Delete Rule</button>
                                    {% else %}
                                        <button class="btn btn-primary" type="submit">Blacklist</button>
                                    {% endif %}

                                </form>
                            </div>
                        </div>
                        <!-- ./card-body -->
                        <div class="card-footer">
                        </div>
                        <!-- /.card-footer -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>



        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
</div>