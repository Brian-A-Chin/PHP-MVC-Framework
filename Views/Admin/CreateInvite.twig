<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0"></h1>
                </div><!-- /.col -->
                <div class="col-sm-6">

                </div><!-- /.col -->
            </div><!-- /.row -->

            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="col-md-5">
                                <form class="aJaxForm" action="SendInvitationEmail" method="post">
                                    <h4>Create Invitation</h4>

                                    <div class="form-group first field--not-empty">
                                        <label for="Email">Name</label>
                                        <br>
                                        <small class="text-muted"></small>
                                        <input type="text" class="form-control required" id="Identity" name="Identity" required="required">
                                    </div>

                                    <div class="form-group first field--not-empty">
                                        <label for="Email">Email</label>
                                        <br>
                                        <small class="text-muted">Choose where registration link will be sent.</small>
                                        <input type="email" class="form-control required" id="Email" name="InvitationEmail" required="required">
                                    </div>

                                    <div class="form-group last mb-3">
                                        <label for="permissions">Permission Group</label>
                                        <br>
                                        <small class="text-muted">Please familiarize yourself with permissions <a target="_blank" href="http://192.168.1.50:8080/account/admin/ViewPermissionGroups">here</a>.</small>
                                        <select class="form-control" id="permissions" name="PermissionGroup" required="required">
                                           {% for key, value in Permissions %}
                                               <option value="{{ value['ID']  }}">{{ value['Name'] }}</option>
                                           {% endfor %}
                                        </select>
                                    </div>


                                    <hr>
                                    <button class="btn btn-success" type="submit">Create Invitation</button>
                                </form>
                            </div>
                        </div>
                        <!-- ./card-body -->
                        <div class="card-footer">
                        </div>
                        <!-- /.card-footer -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>



        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
</div>