<h1 class="h3 mb-3 font-weight-normal">Password Reset</h1>
<p class="text-danger" id="niceError">{{ niceError }}</p>
<input type="hidden" name="Resetcode" value="{{ reset_code }}">
<div class="form-group first">
    <label for="password">Password</label>
    <input type="password" class="form-control" id="password" name="Password" required="required">

</div>

<div class="form-group last mb-3">
    <label for="confirmpassword">Confirm Password</label>
    <input type="password" class="form-control" id="confirmpassword" required="required">

</div>

<button class="btn btn-lg btn-primary btn-block" type="submit">Save</button>
